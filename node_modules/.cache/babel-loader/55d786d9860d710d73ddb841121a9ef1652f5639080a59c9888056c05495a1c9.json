{"ast":null,"code":"import { ref, reactive, computed } from 'vue';\nimport { useVuelidate } from '@vuelidate/core';\nimport { required, email, minLength } from '@vuelidate/validators';\nimport Navbar from '../components/layout/Navbar.vue';\nimport ProgressBar from '@/components/ProgressBar.vue';\nimport PersonalInfoForm from '../components/forms/PersonalInfoForm.vue';\nimport DocumentsForm from '../components/forms/DocumentsForm.vue';\nimport PaymentForm from '@/components/PaymentForm.vue';\nimport NextBackButtons from '../components/buttons/NextBackButtons.vue';\nimport Footer from '../components/layout/Footer.vue';\nexport default {\n  name: 'ApplicationFormPage',\n  components: {\n    Navbar,\n    ProgressBar,\n    PersonalInfoForm,\n    DocumentsForm,\n    PaymentForm,\n    NextBackButtons,\n    Footer\n  },\n  setup() {\n    // Form data and initial values\n    const currentStep = ref(1);\n    const formData = reactive(JSON.parse(localStorage.getItem('applicationFormData')) || {\n      personalInfo: {\n        fullName: '',\n        dateOfBirth: '',\n        nationality: '',\n        passportNumber: '',\n        email: ''\n      },\n      documents: null,\n      payment: null\n    });\n\n    // Step labels for the progress bar\n    const stepLabels = ['Step 1: Personal Info', 'Step 2: Documents', 'Step 3: Payment'];\n\n    // Tooltips for guidance\n    const tooltips = {\n      personalInfo: {\n        passportNumber: 'Enter your passport number in the format XXXXXXXXX',\n        email: 'Enter a valid email address'\n      },\n      documents: {\n        documentUpload: 'Please upload all required documents.'\n      },\n      payment: {\n        cardNumber: 'Enter your 16-digit card number'\n      }\n    };\n\n    // Vuelidate Validation Rules\n    const rules = {\n      personalInfo: {\n        fullName: {\n          required\n        },\n        dateOfBirth: {\n          required\n        },\n        nationality: {\n          required\n        },\n        passportNumber: {\n          required,\n          minLength: minLength(6)\n        },\n        email: {\n          required,\n          email\n        }\n      },\n      documents: {\n        // Assuming documents is an array of document objects\n        documents: {\n          required,\n          minLength: minLength(1)\n        }\n      },\n      payment: {\n        // Assuming payment includes fields like cardNumber\n        payment: {\n          required\n        }\n      }\n    };\n\n    // Use Vuelidate\n    const v$ = useVuelidate(rules, formData);\n\n    // Navigation Methods\n    const nextStep = () => {\n      v$.value.$touch();\n      if (v$.value.$invalid) {\n        alert('Please correct the errors before proceeding.');\n      } else {\n        currentStep.value++;\n        saveFormData();\n      }\n    };\n    const prevStep = () => {\n      if (currentStep.value > 1) {\n        currentStep.value--;\n        saveFormData();\n      }\n    };\n    const submitForm = () => {\n      v$.value.$touch();\n      if (!v$.value.$invalid) {\n        console.log('Form Data:', formData);\n        alert('Form submitted successfully!');\n        localStorage.removeItem('applicationFormData');\n      } else {\n        alert('Please correct the errors before submitting.');\n      }\n    };\n    const saveFormData = () => {\n      localStorage.setItem('applicationFormData', JSON.stringify(formData));\n      console.log('Form data saved for later completion:', formData);\n      alert('Your form data has been saved. You can continue later.');\n    };\n    return {\n      currentStep,\n      formData,\n      stepLabels,\n      tooltips,\n      nextStep,\n      prevStep,\n      submitForm,\n      saveFormData,\n      v$\n    };\n  }\n};","map":{"version":3,"names":["ref","reactive","computed","useVuelidate","required","email","minLength","Navbar","ProgressBar","PersonalInfoForm","DocumentsForm","PaymentForm","NextBackButtons","Footer","name","components","setup","currentStep","formData","JSON","parse","localStorage","getItem","personalInfo","fullName","dateOfBirth","nationality","passportNumber","documents","payment","stepLabels","tooltips","documentUpload","cardNumber","rules","v$","nextStep","value","$touch","$invalid","alert","saveFormData","prevStep","submitForm","console","log","removeItem","setItem","stringify"],"sources":["/Users/Saham/Documents/Warani/src/pages/ApplicationFormPage.vue"],"sourcesContent":["<template>\n    <div class=\"application-form-page sm:p-4 md:p-6\" tabindex=\"0\">\n      <Navbar />\n      \n      <!-- Progress Bar for showing current step with labels and transition effect -->\n      <ProgressBar :currentStep=\"currentStep\" :stepLabels=\"stepLabels\" />\n  \n      <!-- Dynamic Form Step Rendering with enhanced transition -->\n      <transition name=\"slide-fade\" mode=\"out-in\">\n        <div :key=\"currentStep\" class=\"p-2 sm:p-4\">\n          <div v-if=\"currentStep === 1\">\n            <PersonalInfoForm \n              v-model=\"formData.personalInfo\"\n              :validation=\"v$.formData.personalInfo\"\n              :tooltips=\"tooltips.personalInfo\"\n              class=\"space-y-4\"\n              aria-label=\"Personal Information Form\"\n            />\n          </div>\n          \n          <div v-if=\"currentStep === 2\">\n            <DocumentsForm \n              v-model=\"formData.documents\"\n              :validation=\"v$.formData.documents\"\n              :tooltips=\"tooltips.documents\"\n              class=\"space-y-4\"\n              aria-label=\"Documents Form\"\n            />\n          </div>\n          \n          <div v-if=\"currentStep === 3\">\n            <PaymentForm \n              v-model=\"formData.payment\"\n              :validation=\"v$.formData.payment\"\n              :tooltips=\"tooltips.payment\"\n              class=\"space-y-4\"\n              aria-label=\"Payment Form\"\n            />\n          </div>\n        </div>\n      </transition>\n      \n      <!-- Navigation Buttons -->\n      <NextBackButtons\n        :currentStep=\"currentStep\"\n        @next=\"nextStep\"\n        @back=\"prevStep\"\n        @submit=\"submitForm\"\n        @save=\"saveFormData\"\n        class=\"mt-4\"\n        aria-label=\"Form Navigation Buttons\"\n      />\n      \n      <Footer />\n    </div>\n  </template>\n  \n  <script>\n  import { ref, reactive, computed } from 'vue';\n  import { useVuelidate } from '@vuelidate/core';\n  import { required, email, minLength } from '@vuelidate/validators';\n  \n  import Navbar from '../components/layout/Navbar.vue';\n  import ProgressBar from '@/components/ProgressBar.vue';\n  import PersonalInfoForm from '../components/forms/PersonalInfoForm.vue';\n  import DocumentsForm from '../components/forms/DocumentsForm.vue';\n  import PaymentForm from '@/components/PaymentForm.vue';\n  import NextBackButtons from '../components/buttons/NextBackButtons.vue';\n  import Footer from '../components/layout/Footer.vue';\n  \n  export default {\n    name: 'ApplicationFormPage',\n    components: {\n      Navbar,\n      ProgressBar,\n      PersonalInfoForm,\n      DocumentsForm,\n      PaymentForm,\n      NextBackButtons,\n      Footer,\n    },\n    setup() {\n      // Form data and initial values\n      const currentStep = ref(1);\n      const formData = reactive(\n        JSON.parse(localStorage.getItem('applicationFormData')) || {\n          personalInfo: {\n            fullName: '',\n            dateOfBirth: '',\n            nationality: '',\n            passportNumber: '',\n            email: '',\n          },\n          documents: null,\n          payment: null,\n        }\n      );\n  \n      // Step labels for the progress bar\n      const stepLabels = ['Step 1: Personal Info', 'Step 2: Documents', 'Step 3: Payment'];\n  \n      // Tooltips for guidance\n      const tooltips = {\n        personalInfo: {\n          passportNumber: 'Enter your passport number in the format XXXXXXXXX',\n          email: 'Enter a valid email address',\n        },\n        documents: {\n          documentUpload: 'Please upload all required documents.',\n        },\n        payment: {\n          cardNumber: 'Enter your 16-digit card number',\n        },\n      };\n  \n      // Vuelidate Validation Rules\n      const rules = {\n        personalInfo: {\n          fullName: { required },\n          dateOfBirth: { required },\n          nationality: { required },\n          passportNumber: { required, minLength: minLength(6) },\n          email: { required, email },\n        },\n        documents: {\n          // Assuming documents is an array of document objects\n          documents: { required, minLength: minLength(1) },\n        },\n        payment: {\n          // Assuming payment includes fields like cardNumber\n          payment: { required },\n        },\n      };\n  \n      // Use Vuelidate\n      const v$ = useVuelidate(rules, formData);\n  \n      // Navigation Methods\n      const nextStep = () => {\n        v$.value.$touch();\n        if (v$.value.$invalid) {\n          alert('Please correct the errors before proceeding.');\n        } else {\n          currentStep.value++;\n          saveFormData();\n        }\n      };\n  \n      const prevStep = () => {\n        if (currentStep.value > 1) {\n          currentStep.value--;\n          saveFormData();\n        }\n      };\n  \n      const submitForm = () => {\n        v$.value.$touch();\n        if (!v$.value.$invalid) {\n          console.log('Form Data:', formData);\n          alert('Form submitted successfully!');\n          localStorage.removeItem('applicationFormData');\n        } else {\n          alert('Please correct the errors before submitting.');\n        }\n      };\n  \n      const saveFormData = () => {\n        localStorage.setItem('applicationFormData', JSON.stringify(formData));\n        console.log('Form data saved for later completion:', formData);\n        alert('Your form data has been saved. You can continue later.');\n      };\n  \n      return {\n        currentStep,\n        formData,\n        stepLabels,\n        tooltips,\n        nextStep,\n        prevStep,\n        submitForm,\n        saveFormData,\n        v$,\n      };\n    },\n  };\n  </script>\n  \n  <style scoped>\n  .application-form-page {\n    display: flex;\n    flex-direction: column;\n    min-height: 100vh;\n  }\n  \n  .slide-fade-enter-active, .slide-fade-leave-active {\n    transition: opacity 0.5s ease, transform 0.5s ease;\n  }\n  \n  .slide-fade-enter-from, .slide-fade-leave-to {\n    opacity: 0;\n    transform: translateX(100%);\n  }\n  </style>\n"],"mappings":"AA0DE,SAASA,GAAG,EAAEC,QAAQ,EAAEC,QAAO,QAAS,KAAK;AAC7C,SAASC,YAAW,QAAS,iBAAiB;AAC9C,SAASC,QAAQ,EAAEC,KAAK,EAAEC,SAAQ,QAAS,uBAAuB;AAElE,OAAOC,MAAK,MAAO,iCAAiC;AACpD,OAAOC,WAAU,MAAO,8BAA8B;AACtD,OAAOC,gBAAe,MAAO,0CAA0C;AACvE,OAAOC,aAAY,MAAO,uCAAuC;AACjE,OAAOC,WAAU,MAAO,8BAA8B;AACtD,OAAOC,eAAc,MAAO,2CAA2C;AACvE,OAAOC,MAAK,MAAO,iCAAiC;AAEpD,eAAe;EACbC,IAAI,EAAE,qBAAqB;EAC3BC,UAAU,EAAE;IACVR,MAAM;IACNC,WAAW;IACXC,gBAAgB;IAChBC,aAAa;IACbC,WAAW;IACXC,eAAe;IACfC;EACF,CAAC;EACDG,KAAKA,CAAA,EAAG;IACN;IACA,MAAMC,WAAU,GAAIjB,GAAG,CAAC,CAAC,CAAC;IAC1B,MAAMkB,QAAO,GAAIjB,QAAQ,CACvBkB,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,qBAAqB,CAAC,KAAK;MACzDC,YAAY,EAAE;QACZC,QAAQ,EAAE,EAAE;QACZC,WAAW,EAAE,EAAE;QACfC,WAAW,EAAE,EAAE;QACfC,cAAc,EAAE,EAAE;QAClBtB,KAAK,EAAE;MACT,CAAC;MACDuB,SAAS,EAAE,IAAI;MACfC,OAAO,EAAE;IACX,CACF,CAAC;;IAED;IACA,MAAMC,UAAS,GAAI,CAAC,uBAAuB,EAAE,mBAAmB,EAAE,iBAAiB,CAAC;;IAEpF;IACA,MAAMC,QAAO,GAAI;MACfR,YAAY,EAAE;QACZI,cAAc,EAAE,oDAAoD;QACpEtB,KAAK,EAAE;MACT,CAAC;MACDuB,SAAS,EAAE;QACTI,cAAc,EAAE;MAClB,CAAC;MACDH,OAAO,EAAE;QACPI,UAAU,EAAE;MACd;IACF,CAAC;;IAED;IACA,MAAMC,KAAI,GAAI;MACZX,YAAY,EAAE;QACZC,QAAQ,EAAE;UAAEpB;QAAS,CAAC;QACtBqB,WAAW,EAAE;UAAErB;QAAS,CAAC;QACzBsB,WAAW,EAAE;UAAEtB;QAAS,CAAC;QACzBuB,cAAc,EAAE;UAAEvB,QAAQ;UAAEE,SAAS,EAAEA,SAAS,CAAC,CAAC;QAAE,CAAC;QACrDD,KAAK,EAAE;UAAED,QAAQ;UAAEC;QAAM;MAC3B,CAAC;MACDuB,SAAS,EAAE;QA